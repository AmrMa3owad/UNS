@page
@model Orion.Pages.EndUser.SignModel
@{
    Layout = "~/pages/shared/_layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/cssEndUser/Sign.css" />
    <link rel="stylesheet" href="/cssEndUser/layout.css">
    <link rel="stylesheet" href="fontawesome-free-6.4.0-web/css/all.min.css">
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container-sign">
        <div class="forms-container">
            <div class="signin-signup">
                <!-- Sign In Form -->
                <form method="post" asp-page-handler="SignIn" class="sign-in-form">
                    <h2 class="title-sign">Sign in</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" name="Email" placeholder="Email" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="Password" placeholder="Password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Login" class="btn solid" />
                    <p class="social-text"><a href="email.html" style="color:#7e6e95;">Forgot password?</a></p>
                </form>

                <!-- Sign Up Form -->
                <form method="post" asp-page-handler="SignUp" class="sign-up-form">
                    <h2 class="title">Sign up</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" name="Username" placeholder="Username" asp-for="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" name="Email" placeholder="Email" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="Password" placeholder="Password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="ConfirmPassword" placeholder="Confirm Password" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn" value="Sign up" />
                </form>
            </div>
        </div>
        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis, ex ratione. Aliquid!</p>
                    <button class="btn transparent" id="sign-up-btn">Sign up</button>
                </div>
                <img src="img/sign2.png" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum laboriosam ad deleniti.</p>
                    <button class="btn transparent" id="sign-in-btn">Sign in</button>
                </div>
                <img src="img/sign1.png" class="image" alt="" />
            </div>
        </div>
    </div>
    <!-- link js -->
    <script src="~/js/mainCart.js" asp-append-version="true"></script>
    <script src="Js/AppSign.js"></script>
</body>
</html>
