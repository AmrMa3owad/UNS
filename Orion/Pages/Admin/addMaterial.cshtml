            </ul>


        </nav>



        <!-- Page Content  -->
        <div id="content">

            <div class="top-navbar">
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid">

                        <button type="button" id="sidebarCollapse" class="d-xl-block d-lg-block d-md-mone d-none">
                            <span class="material-icons">arrow_back_ios</span>
                        </button>

                        <a class="navbar-brand" href="#"> Dashboard </a>

                        <button class="d-inline-block d-lg-none ml-auto more-button" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="material-icons">more_vert</span>
                        </button>


                    </div>
                </nav>
            </div>


            <div class="container">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col">
                        <h3 class="title">New Material</h3>
                        <div class="inputBox">
                            <span>Material Name:</span>
                            <input type="text" asp-for="Material.MaterialName" placeholder="beaded bracelet" class="input" required>
                        </div>
                        <div class="inputBox">
                            <span>Material Details:</span>
                            <input type="text" asp-for="Material.MaterialDetails" placeholder="beaded bracelet made with love, joy and little sprinkles" class="input" required>
                        </div>
                        <div class="inputBox">
                            <span>Price:</span>
                            <input type="number" asp-for="Material.MaterialPrice" placeholder="5$">
                        </div>
                        <div class="inputBox">
                            <span>Material Type:</span>
                            <input type="text" asp-for="Material.MaterialType" placeholder="beaded bracelet" class="input" required>
                        </div>
                        <div class="flex">
                            <div class="inputBox">
                                <span>Picture:</span>
                                <input type="file" asp-for="Material.Image" placeholder="Enter Your Picture" class="input" required>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <h3 class="title">Features</h3>
                        <div class="inputBox" id="productCheckboxx">
                            <span>Available Sizes:</span>
                            <div class="productCheck">
                                <input type="radio" asp-for="Material.MaterialSizes" value="7cm" id="check1">
                                <label for="size7">7cm</label>
                            </div>
                            <div class="productCheck">
                                <input type="radio" asp-for="Material.MaterialSizes" value="8cm" id="check2">
                                <label for="size8">8cm</label>
                            </div>
                            <div class="productCheck">
                                <input type="radio" asp-for="Material.MaterialSizes" value="9cm" id="check3">
                                <label for="size9">9cm</label>
                            </div>
                        </div>

                        <div class="inputBox" id="productCheckboxx">
                            <span>Available Colors:</span>
                            <div class="productCheck">
                                <input type="radio" asp-for="Material.MaterialColors" value="red" id="red">
                                <label for="colorRed">Red</label>
                            </div>
                            <div class="productCheck">
                                <input type="radio" asp-for="Material.MaterialColors" value="blue" id="blue">
                                <label for="colorBlue">Blue</label>
                            </div>
                            <div class="productCheck">
                                <input type="radio" asp-for="Material.MaterialColors" value="green" id="green">
                                <label for="colorGreen">Green</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="BTBOT"><input type="submit" value="Add" class="button22"></div>
            </form>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="js/jquery-3.3.1.slim.min.js"></script>
