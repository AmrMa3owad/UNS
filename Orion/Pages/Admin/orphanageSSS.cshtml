                                <h4 class="card-title">Orphanages</h4>
                            </div>
                            <div class="card-content table-responsive">
                                @if (Model.Orphanages != null)
                                {
                                    <table class="table table-hover">
                                        <thead class="text-primary">
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Address</th>
                                                <th>Freelancers</th>
                                                <th>Delete</th>
                                                <th id="ADDbtn"><a href="AddOrphanage.html">ADD</a></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var orphanage in Model.Orphanages)
                                            {
                                                <tr>
                                                    <td>@orphanage.Id</td>
                                                    <td><a href="orphanageAdmin.html?orphanageId=@orphanage.Id">@orphanage.OrphanageName</a></td>
                                                    <td>@orphanage.OrphanageRegion</td>
                                                    <td>@orphanage.Freelancers.Count</td>
                                                    <td id="DELbtn">
                                                        <form method="post" asp-page-handler="Delete" asp-route-id="@orphanage.Id">
                                                            <input type="hidden" name="orphanage.Id" value="@orphanage.Id" />
                                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                        </form>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
